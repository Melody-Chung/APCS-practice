#include <iostream>

using namespace std;

int main()
{
    int n;
    cin >> n;
    for(int i=1 ; i<=n ; i++){
        for(int j=1; j<=n-i ; j++){
            cout << "_";
        }
        for(int k=1; k<=i*2-1 ; k++){
            cout << "*";
        }
        for(int m=1; m<=n-i ; m++){
            cout << "_";
        }
        cout << endl;
    }

    return 0;
}
